{
  "name": "@mcandmc/m-cli",
  "version": "1.0.2",
  "description": "a simple CLI for scaffolding of FE",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js ./",
    "release": "node scripts/release.js",
    "test": "jest --color"
  },
  "bin": {
    "m-cli": "bin/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcandmc/m-cli.git"
  },
  "keywords": [
    "cli",
    "tool"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "mcandmc <739095978@qq.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.0.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^1.19.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "didyoumean": "^1.2.1",
    "download-git-repo": "^3.0.2",
    "execa": "^1.0.0",
    "fs-extra": "^8.0.1",
    "inquirer": "^6.3.1",
    "is-git-url": "^1.0.0",
    "lru-cache": "^5.1.1",
    "ora": "^3.4.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "semver": "^6.1.1",
    "validate-npm-package-name": "^3.0.0"
  }
}
